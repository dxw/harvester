%h1= @group.name

- if @group.taken? && !(@group.taken_by? current_user)
  %p Group is taken by somebody else.

= form_tag({action: :update, id: @group.id}, method: :put) do
  %ul
    - if @group.taken?
      - if @group.taken_by? current_user
        %li= submit_tag('Save', class: 'btn')
    - else
      %li= submit_tag('Take', class: 'btn')
    %li= submit_tag('Get a group', class: 'btn')

  %table
    %tbody
      - @group.pages.each do |page|
        %tr
          %td
            %a{href: page.uri}= page.name
          - [:attributes, :audiences, :needs].each do |a|
            %td
              = render partial: 'taxonomy_tag', locals: {tax: a, page: page}
